{
	"name": "micro-chimp",
	"version": "0.1.0",
	"description": "A tiny and simple email signup server.",
	"author": "Blaine Hansen <faichenshing@gmail.com>",
	"license": "MIT",
	"main": "dist/index.js",
	"bin": {
		"send-mail": "dist/bin/send-mail.js",
		"initialize": "dist/bin/initialize.js",
		"codegen": "dist/bin/codegen.js"
	},
	"scripts": {
		"test": "npm run build && node ./dist/bin/codegen.js site_names_test.yml dudes@dudes.com && rm site_name_enum.sql && mv sites.rs src && cargo check && rm nginx.conf && rm deploy.*.sh",
		"build": "rm -Rf dist && webpack && tsc -p . --target es6 --module es6",
		"preversion": "npm test",
		"version": "npm run build",
		"postversion": "git push origin master && git push origin master --tags && npm publish"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/blainehansen/micro-chimp.git"
	},
	"keywords": [
		"email",
		"signup",
		"server",
		"rust",
		"fast",
		"tiny",
		"simple",
		"onboarding",
		"mailing",
		"list",
		"newsletter",
		"validation"
	],
	"bugs": {
		"url": "https://github.com/blainehansen/micro-chimp/issues"
	},
	"homepage": "https://github.com/blainehansen/micro-chimp#readme",
	"peerDependencies": {
		"axios": "0.18.x"
	},
	"dependencies": {
		"pg": "^7.11.0",
		"pg-cursor": "^2.0.0",
		"qs": "^6.7.0"
	},
	"devDependencies": {
		"@babel/core": "^7.5.5",
		"@types/dotenv": "^6.1.1",
		"@types/inquirer": "^6.5.0",
		"@types/minimist": "^1.2.0",
		"@types/node": "^12.6.8",
		"@types/shelljs": "^0.8.5",
		"@types/snake-case": "^1.1.2",
		"@types/webpack": "^4.32.1",
		"@types/yaml": "^1.0.2",
		"axios": "^0.18.1",
		"babel-loader": "^8.0.6",
		"dotenv": "^8.1.0",
